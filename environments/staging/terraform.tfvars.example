# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Instance Configuration
staging_instance_type = "e2-standard-2"  # 2 vCPUs, 8 GB RAM - cost-optimized

# Network Security
allowed_ssh_ips = [
  "0.0.0.0/0"  # Allow SSH from anywhere (change to your IP range for security)
]

# Domain and SSL Configuration (optional)
domain_name = ""  # Leave empty to use IP address
ssl_email   = ""  # Required if domain_name is set

# Database Configuration
db_password = "your-secure-db-password"  # Change this!

# Development Tools Configuration
pgadmin_email    = "admin@staging.local"     # pgAdmin default admin email
pgadmin_password = ""                        # Leave empty to use db_password

# SSH Users for Developers (VPN access required)
# Generate SSH keys for developers who don't have GCP access
staging_ssh_users = [
  # {
  #   username = "john.doe"
  #   ssh_key  = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIG... john.doe@staging"
  # },
  # {
  #   username = "jane.smith"
  #   ssh_key  = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIH... jane.smith@staging"
  # }
]

# Application Versions
postgresql_version = "15"

# Monitoring and Backup
enable_monitoring = true
enable_backups    = false  # Disabled for staging to save costs

# Jenkins CI/CD Configuration (shared between staging and production)
enable_jenkins           = false  # Only enable in one environment to avoid conflicts
jenkins_instance_type    = "e2-standard-2"  # Smaller for staging cost optimization
jenkins_data_disk_size   = 50               # Smaller disk for staging
jenkins_admin_user       = "admin"          # Jenkins admin username
jenkins_admin_password   = ""               # Set in production environment only
jenkins_domain          = ""                # Optional Jenkins domain
jenkins_ssh_public_key  = ""                # SSH key for Jenkins access (optional)

# CI/CD Integration Secrets (typically configured in production only)
github_token_secret        = ""  # GitHub Personal Access Token
docker_registry_secret     = ""  # Docker registry credentials
staging_deploy_key_secret  = ""  # SSH key for staging deployments
prod_deploy_key_secret     = ""  # SSH key for production deployments

# DNS Configuration (optional - usually managed from production)
enable_dns      = false                   # Usually DNS is managed from production
dns_domain_name = "innovaeyewear.com"    # Your domain name
dns_zone_name   = "innovaeyewear-zone"   # Name of the Cloud DNS zone
create_dns_zone = false                   # Zone should already exist

# Resource Labels
labels = {
  managed_by  = "terraform"
  platform    = "infrastructure"
  version     = "v1.0"
  environment = "staging"
  team        = "dev"
  cost_center = "development"
}